<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/btnStar"
        android:textColor="?attr/textAppearanceBody1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Maryland State Governor" />

    <TextView
        android:id="@+id/tvOpenParenthesis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvTitle"
        android:layout_alignTop="@id/tvTitle"
        android:text="("
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvTitle"
        android:layout_toRightOf="@id/tvOpenParenthesis"
        android:layout_weight="1"
        android:textColor="?attr/textAppearanceBody2"
        android:textSize="16sp"
        tools:text="06/21/2020" />

    <TextView
        android:id="@+id/tvCloseParenthesis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvDate"
        android:layout_alignTop="@id/tvTitle"
        android:text=")"
        android:textSize="16sp" />


</RelativeLayout>